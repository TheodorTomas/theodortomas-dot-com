{
  "name": "theodortomas-dot-com",
  "description": "www.theodortomas.com - Theodór Tómas | Software Engineer",
  "author": {
    "name": "Theodór Tómas Theodórsson",
    "email": "theodortomas@gmail.com"
  },
  "version": "3.0.0",
  "license": "MIT",
  "scripts": {
    "dev": "next",
    "build": "next build",
    "precommit": "lint-staged",
    "prettify": "prettier --write -l info \"**/*.{md,css,scss,yaml,yml,ts,js}\"",
    "start": "next start",
    "test": "run-s test:lint:** test:unit",
    "test:lint": "run-s test:lint:**",
    "test:lint:js": "eslint --ext=js --ext=jsx --ignore-path .gitignore .",
    "test:lint:css": "stylelint --config=.stylelintrc './src/**/*.js'",
    "test:unit": "react-scripts test --env=jsdom --coverage --watchAll=false",
    "test:watch": "react-scripts test --env=jsdom --coverage --watch"
  },
  "dependencies": {
    "@zeit/next-css": "^1.0.1",
    "cookieconsent": "^3.1.1",
    "next": "^11.1.3",
    "next-videos": "1.1.4",
    "prop-types": "^15.7.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-ga": "^2.7.0",
    "react-scripts": "^3.4.1",
    "sanitize.css": "^8.0.1",
    "styled-components": "^4.4.1"
  },
  "devDependencies": {
    "babel-plugin-styled-components": "^1.10.7",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "eslint-config-airbnb": "^17.1.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.20.0",
    "husky": "^1.2.0",
    "ignore-styles": "^5.0.1",
    "jest-styled-components": "^6.3.4",
    "lint-staged": "^8.2.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "pretty-quick": "^1.11.1",
    "react-test-renderer": "^16.13.1",
    "stylelint": "^9.9.0",
    "stylelint-config-standard": "^20.0.0"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,json}": [
      "eslint --fix",
      "git add"
    ],
    "src/**/*.{js}": [
      "stylelint --config=.stylelintrc --fix",
      "git add"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js}",
      "!src/**/*.test.{js,jsx}",
      "!src/setupTests.js",
      "!src/global-styles.js",
      "!src/*/*/trackerId.js"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 95,
        "branches": 95,
        "functions": 95,
        "lines": 95
      }
    }
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
