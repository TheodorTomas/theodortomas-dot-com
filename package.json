    "name": "Theodór Tómas Theodórsson",
    "email": "theodortomas@gmail.com"
  },
  "license": "MIT",
  "scripts": {
    "build": "react-scripts build",
    "eject": "react-scripts eject",
    "precommit": "lint-staged",
    "start": "react-scripts start",
    "test": "run-s test:**",
    "lint": "run-s test:lint:**",
    "test:lint:js": "eslint --ext=js --ext=jsx --ignore-path .gitignore .",
    "test:lint:css": "stylelint --config=.stylelintrc './src/**/*.js'",
    "test:unit": "CI=true react-scripts test --env=jsdom"
  },
  "dependencies": {
    "cookieconsent": "^3.0.6",
    "font-awesome": "^4.7.0",
    "prop-types": "^15.6.1",
    "react": "^16.3.1",
    "react-dom": "^16.3.1",
    "react-ga": "^2.4.1",
    "react-helmet": "^5.2.0",
    "sanitize.css": "^5.0.0",
    "styled-components": "^3.2.5"
  },
  "devDependencies": {
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "eslint": "^4.9.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.4.0",
    "husky": "^0.14.3",
    "jest-styled-components": "^5.0.1",
    "lint-staged": "^7.0.4",
    "npm-run-all": "^4.1.2",
    "react-scripts": "1.1.4",
    "stylelint": "^8.1.1",
    "stylelint-config-standard": "^17.0.0",
    "stylelint-config-styled-components-processor": "^0.1.1",
    "stylelint-processor-styled-components": "^0.4.0"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,json}": [
      "eslint --fix",
      "git add"
    ],
    "src/**/*.{js}": [
      "stylelint --config=.stylelintrc --fix",
      "git add"
    ]
  }
}
